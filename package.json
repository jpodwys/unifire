{
  "name": "unifire",
  "version": "0.1.9",
  "description": "A state management solution that's tiny, efficient, capable, and easy.",
  "main": "dist/unifire.modern.js",
  "source": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "microbundle -o dist",
    "test": "npm run build && jest --coverage",
    "test:watch": "npm run build && jest --watchAll"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      [
        "transform-react-jsx",
        {
          "pragma": "h"
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unifirejs/unifire.git"
  },
  "author": "jpodwys",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unifirejs/unifire/issues"
  },
  "homepage": "https://github.com/unifirejs/unifire#readme",
  "devDependencies": {
    "babel-jest": "^26.0.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "jest": "^26.0.1",
    "microbundle": "^0.12.0"
  }
}
